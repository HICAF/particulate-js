{
  "globals": {
    "require"      : true,
    "lib"          : true,
    "Particulate"  : true,
    "App"          : true,
    "QUnit"        : true
  },

  "browser"        : true,
  "curly"          : true,
  "eqeqeq"         : true,
  "eqnull"         : true,
  "forin"          : true,
  "indent"         : 2,
  "latedef"        : "nofunc",
  "maxcomplexity"  : 10,
  "maxdepth"       : 3,
  "newcap"         : true,
  "noarg"          : true,
  "quotmark"       : "single",
  "undef"          : true,
  "unused"         : "vars"
}
